{
  "name": "speaktogether-frontend",
  "version": "1.0.0",
  "description": "SpeakTogether - AI-Powered Real-Time Audio Captions & Translation Desktop App",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev-server\" \"wait-on http://localhost:5173 && electron .\"",
    "dev-server": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "audio",
    "translation",
    "ai",
    "captions",
    "accessibility",
    "google-adk"
  ],
  "author": "SpeakTogether Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0",
    "typescript": "^5.0.0",
    "tailwindcss": "^3.4.17",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5"
  },
  "dependencies": {
    "react": "^19",
    "react-dom": "^19",
    "@radix-ui/react-switch": "^1.1.2",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-progress": "^1.1.1",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-accordion": "^1.2.2",
    "@radix-ui/react-slot": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "lucide-react": "^0.454.0",
    "ws": "^8.14.2",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.speaktogether.app",
    "productName": "SpeakTogether",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "homepage": "https://github.com/speaktogether/app"
} 