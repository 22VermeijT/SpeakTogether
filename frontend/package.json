{
  "name": "speaktogether-frontend",
  "version": "1.0.0",
  "description": "SpeakTogether - AI-Powered Real-Time Audio Captions & Translation Desktop App",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev-server\" \"wait-on http://localhost:5173 && electron .\"",
    "dev-server": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "audio",
    "translation",
    "ai",
    "captions",
    "accessibility",
    "google-adk"
  ],
  "author": "SpeakTogether Team",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vanilla": "^1.0.2",
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "ws": "^8.14.2",
    "uuid": "^9.0.1",
    "chart.js": "^4.4.0",
    "axios": "^1.6.2"
  },
  "build": {
    "appId": "com.speaktogether.app",
    "productName": "SpeakTogether",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "homepage": "https://github.com/speaktogether/app"
} 